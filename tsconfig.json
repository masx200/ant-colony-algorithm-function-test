{
    "compilerOptions": {
        "jsx": "preserve",
        "checkJs": false,
        "allowJs": false,
        "declaration": false,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ESNext", "DOM", "ES2021", "ESNext.Array"],
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules"],
    "include": [
        "collections",
        "vite.config.ts",
        "src",
        "test",
        "functions",
        "pathTabooList",
        "bin",
        "__tests__",
        "cross-points/*.ts",
        "k-opt/*.ts",
        "*.ts",
        "*/*.ts"
    ]
}
